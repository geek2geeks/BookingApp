generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Booking {
  id            String   @id @default(cuid())
  code          String   @unique
  name          String
  studentNumber String
  company       String?
  notes         String?
  slot          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([code])
  @@index([slot])
}
